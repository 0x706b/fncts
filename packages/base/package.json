{
  "name": "@fncts/base",
  "type": "module",
  "typesVersions": {
    "*": {
      "*": [
        "./build/dts/*"
      ]
    }
  },
  "exports": {
    "./*": "./build/esm/*.js",
    "./*.js": "./build/esm/*.js"
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "format": "prettier --list-different -w src/**/*.ts && eslint --fix src/**/*.ts",
    "circular": "madge --circular --no-spinner --warning build/esm",
    "clean": "rm -rf ./build"
  },
  "devDependencies": {
    "@fncts/config": "workspace:*",
    "@fncts/eslint-config": "workspace:*",
    "@fncts/typelevel": "workspace:*",
    "madge": "^5.0.1",
    "typescript": "^4.6.2"
  },
  "tsplus": {
    "typeDir": "./build/dts"
  }
}
